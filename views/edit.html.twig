{% extends 'base.html.twig' %}

{% block title %}CRUD Example - Edit Item{% endblock %}

{% block content %}
    <h2>Edit Item</h2>
    <form action="/items/edit/{{ id }}" method="post">
        <div class="form-group">
            <label for="name">Name:</label>
            <input type="text" name="name" class="form-control" value="{{ item.name }}" required>
        </div>
        <div class="form-group">
            <label for="age">Age:</label>
            <input type="number" name="age" class="form-control" value="{{ item.age }}" required>
        </div>
        <div class="form-group">
            <label for="occupation">Occupation:</label>
            <input type="text" name="occupation" class="form-control" value="{{ item.occupation }}" required>
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
    </form>
    <a href="/items" class="btn btn-secondary">Back to List</a>
{% endblock %}
